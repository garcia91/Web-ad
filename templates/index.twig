{% extends "base.twig" %}

{# page title #}
{% block pagetitle %}{{ L.pagetitle.main }}{% endblock %}

{# content of navigation bar #}
{% block navbar %}
    <div class="collapse navbar-collapse" id="bs-navbar-collapse-2">
        <ul class="nav navbar-nav">
            <li class="active"><a href="#">Link <span class="sr-only">(current)</span></a></li>
            <li><a href="#">Link</a></li>
            <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Dropdown
                    <span class="caret"></span></a>
                <ul class="dropdown-menu" role="menu">
                    <li><a href="#">Action</a></li>
                    <li><a href="#">Another action</a></li>
                    <li><a href="#">Something else here</a></li>
                    <li class="divider"></li>
                    <li><a href="#">Separated link</a></li>
                    <li class="divider"></li>
                    <li><a href="#">One more separated link</a></li>
                </ul>
            </li>
        </ul>
        <form class="navbar-form navbar-left" role="search">
            <div class="form-group">
                <input class="form-control" placeholder="Search" type="text">
            </div>
            <button type="submit" class="btn btn-default">Submit</button>
        </form>
        <ul class="nav navbar-nav navbar-right">
            <li><a href="?act=exit">{{ data.user }} <span class="glyphicon glyphicon-log-out"></span></a></li>
        </ul>
    </div>

{% endblock %}



{# body content #}
{% block pagecontent %}
    <div class="container-fluid">
        <div id="main-row" class="row">
            <div id="tree-col" class="collapse col-sm-4 left-col">
                <div id="tree"></div>
            </div>
            <div class="col-sm-8 right-col collapse in"></div>
        </div>
    </div>
{% endblock %}